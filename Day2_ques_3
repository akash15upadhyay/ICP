class Solution {
    public boolean isPerfectSquare(int num) {
        int start=1;
        int end =num/2;
        if(num==1){
            return true;
        }
        while(start<=end){
            int mid = start+(end-start)/2;
            long target =(long)mid*mid;
            if(target==num){
                return true;
            }
            else if(target>num){
                end = mid-1;
            }
            else{
                start = mid+1;
            }
        }
        return false;    
    }
}
